<VirtualHost *:80>
    ServerName {{ apache_vhosts[0].servername }}
    DocumentRoot {{ apache_vhosts[0].documentroot }}
    ServerAdmin {{ apache_vhosts[0].serveradmin }}
    <Directory {{ apache_vhosts[0].directorypath }}>
        AllowOverride All
        Options Indexes FollowSymLinks
        Order allow,deny
        Allow from all
    </Directory>
</VirtualHost>
